generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Service {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Float
  createdAt   DateTime @default(now())
  orders      Order[]
}

model Order {
  id           Int      @id @default(autoincrement())
  customerName String
  email        String
  serviceId    Int
  createdAt    DateTime @default(now())
  service      Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
}
